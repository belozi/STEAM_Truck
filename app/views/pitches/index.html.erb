<h1>Pitches</h1>

<div class= "container">
  <div class= "row">
    <div class= "offset1 span10">
      <table class= "table table-condensed" width= "647">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Solution</th>
            <th>Comments</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pitches.each do |pitch| %>
            <tr>
              <td><%= pitch.name %></td>
              <td><%= pitch.solution %></td>
              <td><%= pitch.comments %></td>
              <td><%= link_to 'Show', pitch %></td>
              <td><%= link_to 'Edit', edit_pitch_path(pitch) %></td>
              <td><%= link_to 'Destroy', pitch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Pitch', new_pitch_path %>
    </div>
  </div>
</div>